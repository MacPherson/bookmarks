extends layout

block content
  h1= title
  p Welcome to #{title}
  h2 Todo
    div(ng-controller='BookmarksCtrl')
      span {{remaining()}} of {{todos.length}} remaining
      | [
      a(href='', ng-click='archive()') archive
      | ]
      ul.unstyled
        li(ng-repeat='bookmark in bookmarks')
          input(type='checkbox', ng-model='bookmark.done')
          span {{bookmark.text}}
          img(ng-src='{{bookmark.src}}', height="100", width="100")
      form(ng-submit='addBookmarks()')
        input(type='text', ng-model='todoText', size='30', placeholder='add new bookmark here')
        input.btn-primary(type='submit', value='add')
