extends layout

block content
  form
    h2 Закладки
      div(ng-controller='BookmarksCtrl')
        span {{remaining()}} из {{bookmarks.length}}
        ul.list
          li(ng-repeat='bookmark in bookmarks | filter: searchFilter')
            input(type='checkbox', ng-model='bookmark.done')
            span {{bookmark.text}}
            span.tags
              span.taglink(ng-repeat='tag in bookmark.tags', ng-click='tagFilter(tag)') {{tag}} {{$last ? '' : ', '}}
            img(ng-src='{{bookmark.src}}', height="30", width="30")
        form(ng-submit='addBookmarks()')
          div
            input(type='text', ng-model='bookmarkUrl', size='30', placeholder='add new bookmark here')
          div
            input(type='text', ng-model='bookmarkTags', size='30', placeholder='add tags')
          div
            input.btn-primary(type='submit', value='add', class='button')

